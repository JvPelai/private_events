<p id="notice"><%= notice %></p>

<h1>Events</h1>

<table>
  <thead>
    <tr>
      <th> Title</th>
      <th> Location</th>
      <th> Date</th>
      <th> Host </th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td> <%= link_to "#{event.title}" , event %> </td>
        <td> <%=event.location %> </td>
        <td> <%=event.date %> </td>
        <td> <%=event.creator.username %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if logged_in?%>
<%= link_to 'New Event', new_event_path %>
<%else%>
 <p><strong>
 Log in to create an event!
 </strong>
 </p>
<%end%>
